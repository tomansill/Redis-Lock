<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.tomansill.redis.lock</groupId>
    <artifactId>redis-lock</artifactId>
    <version>0.0.0</version>
    <packaging>pom</packaging>

    <name>RedisLock Root Module</name>
    <description>Todo</description>
    <url>https://github.com/tomansill/Redis-Lock</url>

    <modules>
        <module>core</module>
        <module>jedis</module>
    </modules>

    <properties>
        <version>0.0.0</version>
        <java_version>8</java_version>
        <junit_version>4.12</junit_version>
        <jedis_version>2.9.0</jedis_version>
        <maven-plugin.version>2.14</maven-plugin.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <build>
        <pluginManagement>
            <plugins>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.3</version>
                    <configuration>
                        <source>1.${java_version}</source>
                        <target>1.${java_version}</target>
                        <testSource>1.${java_version}</testSource>
                        <testTarget>1.${java_version}</testTarget>
                        <compilerArgument>-Xlint:unchecked</compilerArgument>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <version>3.0.0</version>
                    <configuration>
                        <outputDirectory>docs</outputDirectory>
                        <quiet>true</quiet>
                        <sourceFileIncludes>
                            <sourceFileInclude>**/*.java</sourceFileInclude>
                        </sourceFileIncludes>
                    </configuration>
                    <executions>
                        <execution>
                            <id>attach-javadocs</id>
                            <goals>
                                <goal>jar</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.22.0</version>
                    <configuration>
                        <forkCount>1</forkCount>
                    </configuration>
                </plugin>

            </plugins>
        </pluginManagement>
    </build>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit_version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
